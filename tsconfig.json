{
  // Configuração do compilador TypeScript para o projeto RCS HUB
  "compilerOptions": {
    /* === Diretórios === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Ambiente === */
    "target": "ES2020", // moderno, mas 100% compatível com Tampermonkey
    "module": "none", // saída JS simples, sem import/export
    "lib": ["DOM", "ES2020"], // acesso ao DOM e recursos modernos
    "types": [], // sem Node nem tipos extras
    "moduleResolution": "classic",

    /* === Saída === */
    "sourceMap": false, // não precisa de mapas no userscript
    "declaration": false,
    "removeComments": false, // mantém cabeçalhos e anotações do Tampermonkey
    "noEmitOnError": true,

    /* === Checagens === */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,

    /* === Outros === */
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true
  },

  /* === Arquivos incluídos === */
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
